{
	"compilerOptions": {

		// Following recommendations from https://www.totaltypescript.com/tsconfig-cheat-sheet
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,


		"strict": false,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		"module": "NodeNext",
		"outDir": "dist",
		"sourceMap": true,
		
		"lib": ["es2022", "dom", "dom.iterable"],
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.vue",
		"test/**/*.js",
		"test/**/*.ts",
	],
	"exclude": ["node_modules", "dist"]
}
